@using ActivityReservation.Helpers;
@model PagedListModel<Models.Notice>
@{
    Layout = null;
}
<table class="table table-striped">
    <thead>
        <tr>
            <th>公告标题</th>
            <th>公告简介</th>
            <th>公告更新时间</th>
            <th>公告发布时间</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Models.Notice item in Model.Data)
        {
            <tr>
                <td>
                    @item.NoticeTitle
                </td>
                <td>
                    @if (!String.IsNullOrEmpty(item.NoticeImagePath))
                    {
                        <img src="@item.NoticeImagePath" /><br/>
                    }
                    @item.NoticeDesc
                </td>
                <td>
                    @item.UpdateTime.ToString("yyyy-MM-dd HH:mm:ss")
                </td>
                <td>
                    @item.NoticePublishTime.ToString("yyyy-MM-dd HH:mm:ss")
                </td>
                <td>
                    <a href="@item.NoticePath" target="_blank">查看</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@Html.Pager(Model.Pager)