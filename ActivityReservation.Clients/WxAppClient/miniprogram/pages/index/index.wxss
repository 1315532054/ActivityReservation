/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.page-info {
  color: gray;
}

.table {
  border: 0 solid darkgray;
}

.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  min-height: 3rem;
  align-items: center;
}

.td {
  width: 16%;
  justify-content: center;
  text-align: center;
  display: flex;
  min-height: 3rem;
  align-items: center;
}
