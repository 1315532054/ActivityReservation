{
  "compilerOptions": {    
    "noImplicitAny": true,
    "module": "CommonJS",
    "target": "ES5",
    "allowJs": false,
    "experimentalDecorators": true,
    "noImplicitThis": true,    
    "inlineSourceMap": true,
    "inlineSources": true,
    "strictNullChecks": true,
    "strict": false,
    "strictPropertyInitialization": false,
    "removeComments": true,
    "pretty": true,
    "typeRoots": [
      "./typings"
    ]
  },
  "include": [
    "./miniprogram/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "miniprogram_dist",
    "**/*.spec.ts"
  ]
}
